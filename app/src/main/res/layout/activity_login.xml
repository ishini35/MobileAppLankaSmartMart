<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- App Title -->
        <TextView
            android:id="@+id/appTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lanka Smart Mart"
            android:textColor="#3D9970"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="poppins"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"/>

        <!-- Welcome Back -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="poppins"
            android:layout_marginBottom="8dp"/>

        <!-- Sign in to continue -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to continue"
            android:textColor="#646464"
            android:textSize="16sp"
            android:fontFamily="inter"
            android:layout_marginBottom="40dp"/>

        <!-- Email Input -->
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Email or phone number"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#BCBCBC"
            android:background="@drawable/edittext_border"
            android:drawableStart="@drawable/ic_email_small"
            android:drawablePadding="12dp"
            android:textSize="16sp"
            android:fontFamily="inter"
            android:layout_marginBottom="16dp"/>

        <!-- Password Input -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#BCBCBC"
            android:background="@drawable/edittext_border"
            android:drawableStart="@android:drawable/ic_lock_idle_lock"
            android:drawableEnd="@android:drawable/ic_menu_view"
            android:drawablePadding="12dp"
            android:textSize="16sp"
            android:fontFamily="inter"
            android:layout_marginBottom="16dp"/>

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/forgotPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="#3D9970"
            android:textSize="14sp"
            android:fontFamily="inter"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:clickable="true"/>

        <!-- Login Button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="inter"
            android:backgroundTint="#3D9970"
            android:layout_marginBottom="20dp"/>

        <!-- OR Divider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="#808080"
            android:textSize="14sp"
            android:fontFamily="inter"
            android:layout_marginBottom="20dp"/>

        <!-- Sign in with Google -->
        <TextView
            android:id="@+id/googleSignInText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in with Google"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="inter"
            android:layout_marginBottom="30dp"
            android:clickable="true"/>

        <!-- Don't have account -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? "
                android:textColor="#000000"
                android:textSize="14sp"
                android:fontFamily="inter"/>

            <TextView
                android:id="@+id/signUpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="#3D9970"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="inter"
                android:clickable="true"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>