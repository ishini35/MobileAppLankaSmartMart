<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Main Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Green Header with Gradient -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/header_gradient"
                android:paddingTop="80dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp">

                <!-- Welcome Text -->
                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, Kasun !"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true" />

                <!-- Menu Icon -->
                <ImageView
                    android:id="@+id/menuIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_menu_grid"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    app:tint="#FFFFFF" />

                <!-- Search Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/welcomeText"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/search_background"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp">

                    <!-- Search Icon -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        app:tint="#757575" />

                    <!-- Search Input -->
                    <EditText
                        android:id="@+id/searchEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Search for products..."
                        android:textColorHint="#9E9E9E"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:inputType="text"
                        android:imeOptions="actionSearch" />

                    <!-- Microphone Icon -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_microphone"
                        app:tint="#757575" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Orange Banner with Festive Icon -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/banner_background"
                android:padding="20dp">

                <!-- Festive Icon -->
                <ImageView
                    android:id="@+id/bannerIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/festive_icon"
                    android:scaleType="fitCenter" />

                <!-- Banner Content -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/bannerIcon"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Year Special !"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Up to 30% Off For Selected Items"
                        android:textColor="#212121"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- SALE Badge -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/sale_badge"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:text="SALE"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </FrameLayout>
            </RelativeLayout>

            <!-- Shop by Category Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/category_section_background"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop by Category"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Category Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Groceries -->
                        <LinearLayout
                            android:id="@+id/groceriesCategory"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/category_card_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/ic_groceries"
                                app:tint="#212121" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Groceries"
                                android:textColor="#212121"
                                android:textSize="15sp"
                                android:layout_marginTop="12dp" />
                        </LinearLayout>

                        <!-- Household -->
                        <LinearLayout
                            android:id="@+id/householdCategory"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/category_card_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/ic_household"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Household"
                                android:textColor="#212121"
                                android:textSize="15sp"
                                android:layout_marginTop="12dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Personal Care -->
                        <LinearLayout
                            android:id="@+id/personalCareCategory"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/category_card_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/ic_personal_care"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Personal Care"
                                android:textColor="#212121"
                                android:textSize="15sp"
                                android:layout_marginTop="12dp" />
                        </LinearLayout>

                        <!-- Stationery -->
                        <LinearLayout
                            android:id="@+id/stationeryCategory"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/category_card_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/ic_stationery"
                                app:tint="#212121" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stationery"
                                android:textColor="#212121"
                                android:textSize="15sp"
                                android:layout_marginTop="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Extra space at bottom -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bottom_nav_background"
        android:orientation="horizontal"
        android:elevation="12dp"
        android:weightSum="4">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_home"
                app:tint="#31835D" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#31835D"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Categories -->
        <LinearLayout
            android:id="@+id/navCategories"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_categories"
                app:tint="#757575" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textColor="#757575"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Cart -->
        <LinearLayout
            android:id="@+id/navCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_cart"
                app:tint="#757575" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textColor="#757575"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_profile"
                app:tint="#757575" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="#757575"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Profile Overlay Menu -->
    <RelativeLayout
        android:id="@+id/profileOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/profile_menu_background"
            android:orientation="vertical"
            android:padding="0dp"
            android:clickable="true">

            <!-- Close Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/closeMenu"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_close"
                    app:tint="#212121"
                    android:background="@drawable/close_button_background"
                    android:padding="6dp"
                    android:clickable="true"
                    android:focusable="true" />
            </RelativeLayout>

            <!-- Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_profile_avatar"
                    android:background="@drawable/profile_avatar_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kasun Silva"
                        android:textColor="#212121"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profileEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kasun.silva@gmail.com"
                        android:textColor="#555555"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- View Profile Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="12dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/viewProfileButton"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="View Profile"
                    android:textColor="#212121"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:background="@drawable/view_profile_button"
                    android:textAllCaps="false" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B0D4C1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Menu Items Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="16dp">

                <!-- Notifications -->
                <LinearLayout
                    android:id="@+id/menuNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/menu_item_background"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications"
                        app:tint="#31835D" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textColor="#212121"
                        android:textSize="15sp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <!-- Settings -->
                <LinearLayout
                    android:id="@+id/menuSettings"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/menu_item_background"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        app:tint="#31835D" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:textColor="#212121"
                        android:textSize="15sp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <!-- Barcode Scanner -->
                <LinearLayout
                    android:id="@+id/menuBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/menu_item_background"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_barcode"
                        app:tint="#31835D" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barcode Scanner"
                        android:textColor="#212121"
                        android:textSize="15sp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <!-- Order History -->
                <LinearLayout
                    android:id="@+id/menuOrderHistory"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/menu_item_background"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_history"
                        app:tint="#31835D" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order History"
                        android:textColor="#212121"
                        android:textSize="15sp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>