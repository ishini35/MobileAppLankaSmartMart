<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Back Button-->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Settings"
            android:textColor="#212121"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="4"
        android:baselineAligned="false"
        android:elevation="8dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:drawableTopCompat="@drawable/ic_home"
            android:drawablePadding="4dp"
            android:text="Home"
            android:textSize="12sp"
            android:textColor="#757575"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:clickable="true"
            android:focusable="true"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/navCategories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:drawableTopCompat="@drawable/ic_menu_grid"
            android:drawablePadding="4dp"
            android:text="Categories"
            android:textSize="12sp"
            android:textColor="#757575"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:clickable="true"
            android:focusable="true"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/navCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:drawableTopCompat="@drawable/ic_cart"
            android:drawablePadding="4dp"
            android:text="Cart"
            android:textSize="12sp"
            android:textColor="#757575"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:clickable="true"
            android:focusable="true"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:drawableTopCompat="@drawable/ic_profile"
            android:drawablePadding="4dp"
            android:text="Profile"
            android:textSize="12sp"
            android:textColor="#757575"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- ScrollView content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ACCOUNT Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCOUNT"
                android:textColor="#616161"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_card_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <!-- Profile Settings -->
                <LinearLayout
                    android:id="@+id/profileSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_profile"
                        android:contentDescription="Profile Settings"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Profile Settings"
                        android:textColor="#212121"
                        android:textSize="16sp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_back"
                        android:rotation="180"
                        android:contentDescription=""/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="#E0E0E0" android:layout_marginVertical="4dp"/>

                <!-- Saved Addresses -->
                <LinearLayout
                    android:id="@+id/savedAddresses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_home"
                        android:contentDescription="Saved Addresses"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Saved Addresses"
                        android:textColor="#212121"
                        android:textSize="16sp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_back"
                        android:rotation="180"
                        android:contentDescription=""/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="#E0E0E0" android:layout_marginVertical="4dp"/>

                <!-- Payment Methods -->
                <LinearLayout
                    android:id="@+id/paymentMethods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_cart"
                        android:contentDescription="Payment Methods"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Payment Methods"
                        android:textColor="#212121"
                        android:textSize="16sp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_back"
                        android:rotation="180"
                        android:contentDescription=""/>
                </LinearLayout>
            </LinearLayout>

            <!-- NOTIFICATIONS Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOTIFICATIONS"
                android:textColor="#616161"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_card_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <!-- Push Notifications -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications"
                        android:contentDescription="Push Notifications"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Push Notifications"
                        android:textColor="#212121"
                        android:textSize="16sp"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/pushNotificationSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="Toggle push notifications"
                        android:text=""
                        android:checked="true"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="#E0E0E0" android:layout_marginVertical="4dp"/>

                <!-- Email Notifications -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_email_small"
                        android:contentDescription="Email Notifications"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Email Notifications"
                        android:textColor="#212121"
                        android:textSize="16sp"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/emailNotificationSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="Toggle email notifications"
                        android:checked="true"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="#E0E0E0" android:layout_marginVertical="4dp"/>

                <!-- SMS Notifications -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications"
                        android:contentDescription="SMS Notifications"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="SMS Notifications"
                        android:textColor="#212121"
                        android:textSize="16sp"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/smsNotificationSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="Toggle SMS notifications"
                        android:text=""
                        android:checked="false"/>
                </LinearLayout>
            </LinearLayout>

            <!-- PREFERENCES Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PREFERENCES"
                android:textColor="#616161"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_card_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <!-- Language -->
                <LinearLayout
                    android:id="@+id/languageSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        android:contentDescription="Language"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Language"
                        android:textColor="#212121"
                        android:textSize="16sp"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/languageSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="Toggle language"
                        android:checked="true"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="#E0E0E0" android:layout_marginVertical="4dp"/>

                <!-- Dark Mode -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        android:contentDescription="Dark Mode"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Dark Mode"
                        android:textColor="#212121"
                        android:textSize="16sp"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/darkModeSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="Toggle dark mode"
                        android:checked="false"/>
                </LinearLayout>
            </LinearLayout>

            <!-- OTHER Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTHER"
                android:textColor="#616161"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_card_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <!-- Help & Support -->
                <LinearLayout
                    android:id="@+id/helpSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        android:contentDescription="Help and Support"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Help &amp; Support"
                        android:textColor="#212121"
                        android:textSize="16sp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_back"
                        android:rotation="180"
                        android:contentDescription=""/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="#E0E0E0" android:layout_marginVertical="4dp"/>

                <!-- Terms & Conditions -->
                <LinearLayout
                    android:id="@+id/termsConditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        android:contentDescription="Terms and Conditions"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Terms &amp; Conditions"
                        android:textColor="#212121"
                        android:textSize="16sp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_back"
                        android:rotation="180"
                        android:contentDescription=""/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="#E0E0E0" android:layout_marginVertical="4dp"/>

                <!-- Privacy Policy -->
                <LinearLayout
                    android:id="@+id/privacyPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        android:contentDescription="Privacy Policy"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Privacy Policy"
                        android:textColor="#212121"
                        android:textSize="16sp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_back"
                        android:rotation="180"
                        android:contentDescription=""/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="#E0E0E0" android:layout_marginVertical="4dp"/>

                <!-- About -->
                <LinearLayout
                    android:id="@+id/aboutApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        android:contentDescription="About"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="About LankaSmartMart"
                        android:textColor="#212121"
                        android:textSize="16sp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_back"
                        android:rotation="180"
                        android:contentDescription=""/>
                </LinearLayout>
            </LinearLayout>

            <!-- LOGOUT Button -->
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:minWidth="200dp"
                android:text="Log Out"
                android:textColor="#FFFFFF"
                android:backgroundTint="#F44336"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>